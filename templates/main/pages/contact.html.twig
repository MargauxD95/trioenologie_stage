{% extends 'base.html.twig' %}
{% block title %}Contactez nous{% endblock %}
{% block body %}
<div class="container shadow" id="contactBg">

    <h1 class="text-center pt-2 mb-3 sP">Association Trioenologie</h1>  
    {{ form_start(form) }}      
    <div class="contact">
    <h2>Contactez-nous</h2>
        <div class="row justify-content-center text-center fst-italic">        
            <div class="col-6">{{ form_row(form.email) }}</div>
        </div>

        <div class="row justify-content-center text-center fst-italic">        
            <div class="col-6">{{ form_row(form.subject) }}</div>        
        </div>

        <div class="row justify-content-center text-center fst-italic">
            <div class="col-6">{{ form_row(form.message) }}</div>        
        </div>
    
        <div class="row justify-content-center pb-4">
            <button class="btn btn-contact col-lg-3 col-sm-auto">{{ button_label|default('Envoyer') }}</button>   
        </div>
    </div>
    {{ form_end(form) }}

    <div class="row justify-content-center">    
        <a href="{{ path('home') }}" class="btn btn-lg btn-return shadow col-lg-2 col-md-2 mt-5 mb-5">Retour Ã  l'accueil</a>
    </div>
    
</div>
{% endblock %}